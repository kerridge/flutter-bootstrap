{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter (Debug)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart"
    },
    {
      "name": "Flutter (Profile)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "program": "lib/main.dart"
    },
    {
      "name": "Flutter (Release)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "program": "lib/main.dart"
    },
    {
      "name": "Flutter (Hot Reload)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart",
      "args": ["--hot"]
    },
    {
      "name": "Flutter Web (Debug)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "debug",
      "program": "lib/main.dart",
      "args": ["--web-port=8080", "--web-hostname=localhost"]
    },
    {
      "name": "Flutter Web (Profile)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "profile",
      "program": "lib/main.dart",
      "args": ["--web-port=8080", "--web-hostname=localhost"]
    },
    {
      "name": "Flutter Web (Release)",
      "cwd": "template",
      "request": "launch",
      "type": "dart",
      "flutterMode": "release",
      "program": "lib/main.dart",
      "args": ["--web-port=8080", "--web-hostname=localhost"]
    }
  ]
}
